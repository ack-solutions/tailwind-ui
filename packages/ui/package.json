{
  "name": "@ackplus/ui",
  "version": "0.0.0",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "tokens.css",
    "styles.css",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "echo \"No tests\"",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build -o storybook-static",
    "build-storybook": "pnpm run storybook:build"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*",
    "tailwindcss": "^4"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.3",
    "tailwind-variants": "^0.3.1"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./button": {
      "types": "./dist/button.d.ts",
      "import": "./dist/button.mjs",
      "require": "./dist/button.cjs"
    },
    "./badge": {
      "types": "./dist/badge.d.ts",
      "import": "./dist/badge.mjs",
      "require": "./dist/badge.cjs"
    },
    "./alert": {
      "types": "./dist/alert.d.ts",
      "import": "./dist/alert.mjs",
      "require": "./dist/alert.cjs"
    },
    "./theme/ThemeProvider": {
      "types": "./dist/theme/ThemeProvider.d.ts",
      "import": "./dist/theme/ThemeProvider.mjs",
      "require": "./dist/theme/ThemeProvider.cjs"
    },
    "./tokens.css": "./tokens.css",
    "./styles.css": "./styles.css"
  },
  "devDependencies": {
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "tsup": "^8.5.0",
    "@storybook/react": "^8.2.9",
    "@storybook/react-vite": "^8.2.9",
    "@storybook/addon-essentials": "^8.2.9",
    "@storybook/addon-a11y": "^8.2.9",
    "storybook": "^8.2.9",
    "vite": "^5.4.10"
  }
}
